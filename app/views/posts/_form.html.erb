<%= form_for(@post, url: choose_new_or_edit) do |f| %>
  <%= f.error_messages! %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :コメント %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.label :アップロード写真 %>
  <%= f.file_field :image, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
